@model Wineapp.Models.ViewModels.TastesVM
@{
    ViewData["Title"] = "Survey";
}

<h1>Survey</h1>
<a asp-action="Home">Saltar</a>

<p>Colours</p>
<form name="colour">
    @foreach (ColourTaste colourTaste in Model.ColourTastes)
    {
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="@colourTaste.Id">
            <label class="form-check-label" for="inlineCheckbox1">@colourTaste.Colour.ColourType</label>
        </div>
    }
</form>

<p>Source</p>
<form name="source">
    @foreach (SourceTaste sourceTaste in Model.SourceTastes)
    {
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="@sourceTaste.Id">
            <label class="form-check-label" for="inlineCheckbox1">@sourceTaste.Source.SourceType</label>
        </div>
    }
</form>

<p>Sweetness</p>
<form name="sweet">
    @foreach (SweetnessTaste sweetnessTaste in Model.SweetnesTastes)
    {
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" value="@sweetnessTaste.Id">
            <label class="form-check-label" for="inlineCheckbox1">@sweetnessTaste.Sweetnes.SweetnesType</label>
        </div>
    }
</form>

<div>
    <a asp-action="InsertSurveyValues">Finalizar</a>
</div>
