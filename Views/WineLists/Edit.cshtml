@model Wineapp.Models.WineList

@{
    ViewData["Title"] = "Edit";
}

@section Styles {
    <link href="@Url.Content("~/css/wineListsEdit.css")" rel="stylesheet" type="text/css" />

}


<h1 class="titleWineListEdit">Editor de lista</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ListName" class="control-label">Nombre</label>
                <input asp-for="ListName" class="form-control" />
                <span asp-validation-for="ListName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descripción</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ListDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AppUserId" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>